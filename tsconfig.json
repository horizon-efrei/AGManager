{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"checkJs": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"incremental": true,
		"lib": ["ES2021"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "ES2021"
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules/"]
}
